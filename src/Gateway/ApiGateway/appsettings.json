{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Yarp": {
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination": {
            "Address": "https://localhost:7012/api/Auth"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination": {
            "Address": "https://localhost:7012/api/User"
          }
        }
      },
      "token-cluster": {
        "Destinations": {
          "destination": {
            "Address": "https://localhost:7012/api/Token"
          }
        }
      }
    },
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "token-route": {
        "ClusterId": "token-cluster",
        "Match": {
          "Path": "/token/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    }
  } 
}
