@{
    ViewData["Title"] = "Почта не подтверждена";
}
@model Web.MVC.DTOs.Auth.ConfirmEmailPrepareDto
<link rel="stylesheet" href="~/css/auth/ConfirmEmailPrepare.css"/>

<div class="confirm-email-prepare-password-page-container">
    <h3 class="mb-2">Вы не были аутентифицированы, так как Ваша почта не подтверждена</h3>
    <form method="post">
        <input type="hidden" name="userId" value="@Model.UserId"/>
        <div class="confirm-email-prepare-password-captcha">
            <dnt-captcha asp-captcha-generator-max="99999"
                         asp-captcha-generator-min="1000"
                         asp-captcha-generator-language="Russian"
                         asp-captcha-generator-display-mode="ShowDigits"
                         asp-use-relative-urls="true"
                         asp-placeholder="Введите капчу"
                         asp-validation-error-message="Пожалуйста, пройдите капчу"
                         asp-too-many-requests-error-message="Слишком много запросов"
                         asp-font-name="Tahoma"
                         asp-font-size="20"
                         asp-fore-color="#333333"
                         asp-back-color="#ccc"
                         asp-text-box-class="confirm-email-prepare-password-input"
                         asp-text-box-template="<div>{0}</div>"
                         asp-validation-message-class="text-danger"
                         asp-refresh-button-class="glyphicon glyphicon-refresh btn-sm"
                         asp-show-refresh-button="false" />
        </div>
        <input class="confirm-email-prepare-password-submit" type="submit" value="Подтвердить почту" />
    </form>
</div>