@{
    ViewData["Title"] = "Вход";
}
@model Web.MVC.DTOs.Auth.LoginDto

<h4>Войти в аккаунт</h4>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserNameOrEmail"></label><br/>
        <input asp-for="UserNameOrEmail"/>
        <span asp-validation-for="UserNameOrEmail"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br/>
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <a asp-controller="Auth" asp-action="ForgotPassword">Забыли пароль?</a><br/>
    <input type="submit" value="войти"/>
</form>
