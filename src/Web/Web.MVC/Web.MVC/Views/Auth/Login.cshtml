@{
    ViewData["Title"] = "Вход";
}
@model Web.MVC.DTOs.Auth.LoginDto
<link rel="stylesheet" href="~/css/auth/Login.css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="login-form-container">
    <h2>Вход в аккаунт</h2>
    <form method="post">
        <div class="validation-summary" asp-validation-summary="ModelOnly"></div>
        <span class="validation-message" asp-validation-for="UserNameOrEmail"></span>
        <span class="validation-message" asp-validation-for="Password"></span>
        <div>
            <input class="login-input" asp-for="UserNameOrEmail" placeholder="Имя пользователя или адрес эл. почты"/>
        </div>
        <div class="password-container">
            <input class="login-input mt-2" id="password" asp-for="Password" placeholder="Пароль" />
            <button type="button" class="eye-icon" onclick="togglePassword('password')">
                <i class="fas fa-eye" id="eye-icon-password"></i>
            </button>
        </div>
        <div class="login-links-container">
            <a class="login-first-link" asp-controller="Auth" asp-action="ForgotPassword">Забыли пароль?</a>
            <a asp-controller="Auth" asp-action="Register">Еще нет аккаунта?</a>
        </div>
        <input class="login-submit" type="submit" value="Войти"/>
    </form>
</div>

<script src="~/js/ShowHidePassword.js"></script>