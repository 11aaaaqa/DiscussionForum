@using Web.MVC.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Web.MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @* <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="Reports" asp-route-reportType="@ReportTypeConstants.DiscussionType" asp-route-pageNumber="1" asp-route-pageSize="20">DiscussionReports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="Reports" asp-route-reportType="@ReportTypeConstants.CommentType" asp-route-pageNumber="1" asp-route-pageSize="20">CommentsReports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Moderator" asp-action="Users" asp-route-pageNumber="1" asp-route-pageSize="30">Все пользователи</a>
                        </li>
                    </ul>
                </div> *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="header-items" asp-area="" asp-controller="Topic" asp-action="Topics" asp-route-pageNumber="1"
                               asp-route-pageSize="15">Темы</a>
                        </li>
                        <li class="nav-item">
                            <a class="header-items" asp-area="" asp-controller="Discussion"
                               asp-action="GetDiscussionsSortedByPopularityForToday" asp-route-pageNumber="1" asp-route-pageSize="20">Лучшее</a>
                        </li>
                        <li class="nav-item">
                            <a class="header-items" asp-area="" asp-controller="Discussion" asp-action="GetDiscussionsSortedByNovelty"
                               asp-route-pageNumber="1" asp-route-pageSize="20">Новые</a>
                        </li>
                    </ul>
                </div>
                <div class="profile-btns">
                    @if (User.Identity.IsAuthenticated)
                    {
                        string returnUrl;
                        if (Context.Request.QueryString.HasValue)
                        {
                            returnUrl = Context.Request.Path + Context.Request.QueryString;
                        }
                        else
                        {
                            returnUrl = Context.Request.Path;
                        }
                        <ul class="navbar-nav flex-grow-1 profile-btns">
                            <li class="nav-item profile-btns">
                                <div class="dropdown-profile">
                                    <button id="dropdownProfileButton" class="open-profile-dropdown-btn">@User.Identity.Name &#x25BC;</button>
                                    <div id="dropdownProfileList" class="dropdown-profile-list">
                                        <a class="dropdown-refs" asp-controller="User" asp-action="GetUser" asp-route-userName="@User.Identity.Name">мой профиль</a>
                                        <form method="post" asp-controller="Auth" asp-action="Logout" asp-route-returnUrl="@returnUrl">
                                            <input class="logout" type="submit" value="выйти"/>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    else
                    {
                        string returnUrl;
                        if (Context.Request.QueryString.HasValue)
                        {
                            returnUrl = Context.Request.Path + Context.Request.QueryString;
                        }
                        else
                        {
                            returnUrl = Context.Request.Path;
                        }
                        <ul class="navbar-nav flex-grow-1 profile-btns">
                            <li class="nav-item profile-btns">
                                <a class="profile-btns" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@returnUrl">войти</a>
                            </li>
                            <li class="nav-item profile-btns">
                                <a class="profile-btns" asp-controller="Auth" asp-action="Register">зарегистрироваться</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Web.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/layout/dropdown.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
