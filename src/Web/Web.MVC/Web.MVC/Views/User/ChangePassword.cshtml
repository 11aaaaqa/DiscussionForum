@{
    ViewData["Title"] = "Изменить пароль";
}
@model Web.MVC.DTOs.User.ChangePasswordDto

<h3>Изменить пароль</h3>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="OldPassword"></label><br/>
        <input asp-for="OldPassword"/>
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div>
        <label asp-for="NewPassword"></label><br />
        <input asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <input type="submit" value="изменить"/>
</form>