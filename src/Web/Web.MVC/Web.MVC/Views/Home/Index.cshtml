@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

<a asp-controller="Topic" asp-action="Topics">Форум</a>    

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="User" asp-action="GetUser" asp-route-userName="@User.Identity.Name">мой профиль</a>
    <form method="post" asp-controller="Auth" asp-action="Logout" asp-route-returnUrl="@Context.Request.Path">
        <input type="submit" value="выйти"/>
    </form>
}
else
{
    <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Войти</a>
    <a asp-controller="Auth" asp-action="Register">зарегистрироваться</a>
} 

</div>
